<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Specific widget styles -->
        <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownStyle</item>
        <item name="android:spinnerItemStyle">@style/spinnerStyle</item>
        <item name="android:buttonStyle">@style/buttonStyle</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="main_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/background_khaki_green</item>
    </style>

    <style name="internal_layout_style">
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">@color/background_khaki_green</item>
    </style>

    <style name="spinnerDropDownStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/default_text</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="spinnerStyle" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:textColor">@color/default_text</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">5sp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="buttonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/default_text</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingLeft">12sp</item>
        <item name="android:paddingRight">12sp</item>
        <item name="android:paddingTop">6sp</item>
        <item name="android:paddingBottom">6sp</item>
    </style>

    <style name="AlertDialogStyle" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:background">@color/colorPrimaryDark</item>
        // actually kinda looks good as a high-contrast warning
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
